    "version": "0.2.0",
    "configurations": [
        {
            "name": "Celery: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 6900
             },
             "pathMappings": [{
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "."
               }],
              // "preLaunchTask": "docker-compose up",
              "django": true,
        },
        {
            "name": "Python: deploydb",
            "type": "python",
            "request": "launch",
            "program": "src/manage.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceRoot}/.venv",
            "args": [
                "deploydb"
            ]
        },
        {
            "name": "Python: createdb",
            "type": "python",
            "request": "launch",
            "program": "src/manage.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceRoot}/.venv",
            "args": [
                "createdb"
            ]
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/manage.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port",
                "5000",
                "-h", "0.0.0.0"
                //"--no-debugger"
            ],
            "envFile": "${workspaceRoot}/.venv",
            "jinja": true,
            "justMyCode": false
        }
    ]
}