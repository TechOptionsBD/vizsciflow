    "script":[
        "# check two fastq files for quality",
        "fq_html = fastqc.CheckQuality('/public/MiSeq_SOP/F3D7_S195_L001_R1_001.fastq')",
        "print(fq_html)",
        "fq_html = fastqc.CheckQuality('/public/MiSeq_SOP/F3D7_S195_L001_R2_001.fastq')",
        "print(fq_html)",
        "",
        "# merge these files",
        "data = pear.Merge('/public/MiSeq_SOP/F3D7_S195_L001_R1_001.fastq', '/public/MiSeq_SOP/F3D7_S195_L001_R2_001.fastq')",
        "print(data)",
        "",
        "# align these files with a reference dna",
        "data = bwa.Align('/public/Chr1.cdna', '/public/MiSeq_SOP/F3D7_S195_L001_R1_001.fastq', '/public/MiSeq_SOP/F3D7_S195_L001_R2_001.fastq')",
        "print(data)",
        "",
        "# convert the aligned sam file to bam format",
        "data = pysam.SamToBam(data)",
        "print(data)",
        ""
    ]
