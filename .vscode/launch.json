    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "manage.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run", "--port", "8000"
                //"--no-debugger"
            ],
            "envFile": "${workspaceRoot}/.venv",
            "jinja": true,
            "justMyCode": false
        }
