{
    "functions": [
       {
           "org": "srlab",
           "package": "flash",
           "module": "app.biowl.libraries.flash.adapter",
           "group": "Analysis",
           "level": 0,
           "name":"Merge",
           "internal":"run_flash",
           "runmode": "local",
           "desc": "Merge mates from fragments that are shorter than twice the read length.",
           "returns": "file",
           "example":"data = flash.Merge(data, data2)",
           "example2":"data = flash.Merge(data, data2, outdir='', max_overlap=50)",
           "params":[  
            {  
               "name":"data",
               "type":"string",
               "desc":"forward fastq file"
            },
            {  
               "name":"data2",
               "type":"string",
               "desc":"reverse fastq file"
            },
            {
               "name": "output",
               "type": "string",
               "desc":"optional. Output path with filename prefix."
            },
            {
                "name": "max_overlap",
                "type": "int"
            }            
            ]
       },
       {
           "org": "srlab",
           "package": "flash",
           "module": "app.biowl.libraries.flash.adapter",
           "group": "Analysis",
           "level": 0,
           "name":"MergeR",
           "internal":"run_flash_recursive",
           "runmode": "local",
           "desc": "Merge mates from fragments that are shorter than twice the read length.",
           "returns": "string",
           "example":"mergedDir = MergeR(indir)",
           "example2":"mergedDir = MergeR(indir=, [outdir=], [max_overlap=50])",
           "params":[  
            {  
               "name":"indir",
               "type":"string"
            },
            {  
               "name":"outdir",
               "type":"string"
            },
            {
                "name": "max_overlap",
                "type": "int"
            }            
            ]
       }
   ]
