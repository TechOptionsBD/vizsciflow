{
    "functions": [
       {
           "org": "srlab",
           "package": "nicad",
           "group": "clonecheck",
           "level": 0,
           "name":"NiCad",
           "internal":"run_nicad",
           "runmode": "local",
           "desc": "Automated Detection of Near-Miss Intentional Clones",
           "example":"output = NiCad(granularity='functions', language='java', srcdir='/public/nicad/srcdir', output='/public/nicad/outdir'])",
           "params":[  
            {
                "name": "data",
                "type": "folder"
            },
            {  
               "name":"granularity",
               "type":"string",
               "default": "functions",
               "description": "functions|blocks"
            },
            {
                "name": "language",
                "type": "string",
               "default": "java",
               "description": "java|c|python"
            }
            ],
            "returns":[
				{
					"name": "data",
					"type": "folder"
				}
			]         
       },
       {
           "org": "srlab",
           "package": "nicad",
           "group": "clonecheck",
           "level": 0,
           "name":"NiCadCross",
           "internal":"run_nicadcross",
           "runmode": "local",
           "desc": "Automated Detection of Near-Miss Intentional Clones. It does an cross-system test - that is, given two systems s1 and s2, it reports only clones of fragments of s1 in s2.  This is useful in incremental clone detection for new versions, or for detecting clones between two systems to be checked for cross-cloning.",
           "example":"NiCadCross(granularity=, language=, srcdir1=, srcdir2=])",
           "params":[  
            {
                "name": "data",
                "type": "folder"
            },
            {
                "name": "data2",
                "type": "folder"
            },
            {  
                "name":"granularity",
                "type":"string",
                "default": "functions",
                "description": "functions|blocks"
             },
             {
                 "name": "language",
                 "type": "string",
                "default": "java",
                "description": "java|c|python"
             }
            ],
            "returns":[
				{
					"name": "data",
					"type": "folder"
				}
			]
       }
   ]
}